Sub PlayMusic
  If playqueue$="" Then Read PlayQueue$
  If PlayQueue$="!" Then Restore :Read PlayQueue$
  ns=Instr(PlayQueue$," ")
  freq$=Left$(PlayQueue$,ns)
  PlayQueue$=Mid$(Playqueue$,ns+1,Len(PlayQueue$))
  Select Case Freq$
    Case "X "
      fq=oldfq
    Case "0 "
      fq=0
    Case Else
      fq=Val(FreQ$)
  End Select
  If fq<>0 Then Play tone fq,fq,100
  Pause 70
  oldfq=fq
End Sub


Randomize Timer
colornum=6
Dim spos(8),spidercolor(colornum),scolr(8)
spidercolor(1)=RGB(green)
spidercolor(2)=RGB(magenta)
spidercolor(3)=RGB(cyan)
spidercolor(4)=RGB(yellow)
spidercolor(5)=RGB(pink)
spidercolor(6)=RGB(orange)
fangcolor=RGB(lightgray)
webcolor=RGB(white)
glovecolor1=RGB(orange)
glovecolor2=RGB(yellow)
glovecolor3=RGB(red)
bgcolor=RGB(black)
lvl=2

Do
  CLS
  Text 0,0," ",,10,8,RGB(lightgrey)
  Box 130,144,8,16,,RGB(white),RGB(white)
  Box 180,144,8,16,,RGB(white),RGB(white)
  Text 0,180,"S",,3,4,RGB(gold)
  Text 65,180,"P",,3,3,RGB(orange)
  Text 111,180,"IDE",,3,2,RGB(rust)
  Text 208,180,"R",,3,3,RGB(orange)
  Text 257,180,"S",,3,4,RGB(gold)
  Text 130,230,"Novice",,1,,RGB(cyan)
  Text 130,242,"Intermediate",,,,RGB(cyan)
  Text 130,254,"Advanced",,,,RGB(cyan)
  Text 30,278,"%$#",,9,2,RGB(yellow)
  Text 30,294," !"+Chr$(34),,9,2,RGB(brown)
  Text 78,294,"Sacred Potato Productions",,,,RGB(white)
  Text 80,304,"Some rights reserved.",,1,,RGB(white)
  Do
    Select Case lvl
      Case 1
        startpos=50
        q=230
      Case 2
        startpos=250
        q=242
      Case 3
        startpos=300
        q=254
    End Select
    Text 114,q," ",,8,1,RGB(red)
    Do
      PlayMusic
      i$=Inkey$
    Loop Until i$<>""
    If i$=Chr$(128) Then
      Text 114,q,"  "
      lvl=lvl-1
      If lvl=0 Then lvl=3
    End If
    If i$=Chr$(129) Then
      Text 114,q,"  "
      lvl=lvl+1
      If lvl=4 Then lvl=1
    End If
  Loop Until i$=" " Or i$=Chr$(13) Or i$=Chr$(27)

  If i$=Chr$(27) Then CLS :End
  For t=1 To 8
    spos(t)=1
    scolr(t)=spidercolor(Int(Rnd*colornum)+1)
  Next t

  Color bgcolor,bgcolor
  CLS
  score=0
  gameover=0
  oldgpos=1
  gpos=5
  sspeed=3'lvl
  For t=1 To 8
    Text (t-1)*40,1," ",,10,1,scolr(t)
  Next

  Do
    x=Int(Rnd*8)+1
    spos(x)=spos(x)+sspeed
    Text (x-1)*40,spos(x)," ",,10,1,scolr(x)
    Line ((x-1)*40)+20,0,((x-1)*40)+20,spos(x)+2,,webcolor
    Line ((x-1)*40)+18,spos(x)+18,((x-1)*40)+18,spos(x)+19,,fangcolor
    Line (x*40)-18,spos(x)+18,(x*40)-18,spos(x)+19,,fangcolor
    If startpos>0 Then
      startpos=startpos-1
      If startpos=0 Then
        For t=319 To 280 Step -1
          Text 0,t,"!",,10,,RGB(red)
          If t/4=Int(t/4) Then Play tone 620-t,800-t,1
          Pause 10
        Next
        For t=0 To 160 Step 5
          Box t-5,280,5,20,,bgcolor,bgcolor
          Text t,280,"!",,10,1,RGB(red)
          If t/20=Int(t/20) Then Play tone 6200,6200,1
          Pause 10
        Next
        For t=1 To 20:i$=Inkey$:Next
      End If
    Else
      If spos(x)>239 Then
        gameover=1
      Else
        i$=Inkey$
      End If
      Select Case i$
        Case Chr$(130)
          If gpos>1 Then
            gpos=gpos-1
          End If
        Case Chr$(131)
          If gpos<8 Then
           gpos=gpos+1
          End If
        Case " ",Chr$(13)
          For t=279 To spos(gpos)+20 Step -8
            Text ((gpos-1)*40),t,"!",,10,,glovecolor3
            Text ((gpos-1)*40)+8,t+40," ",,11,,glovecolor1,glovecolor2
            Text ((gpos-1)*40)+8,t+44," ",,11,,glovecolor1,glovecolor2
            Play tone t+200,t+200,5
            Pause 5
          Next
          If spos(gpos)>20 Then
            Box (gpos-1)*40,spos(gpos)-10,40,25,,bgcolor,bgcolor
            score=score+1
          End If
          spos(gpos)=spos(gpos)-50
          If spos(gpos)<1 Then spos(gpos)=1
          Text (gpos-1)*40,spos(gpos),Chr$(33+Int(Rnd*4)+1),,10,,scolr(gpos)
          Line ((gpos-1)*40)+20,0,((gpos-1)*40)+20,spos(gpos)+2,,webcolor
          Line ((gpos-1)*40)+18,spos(gpos)+14,((gpos-1)*40)+17,spos(gpos)+15,,fangcolor
          Line ((gpos)*40)-18,spos(gpos)+14,((gpos)*40)-17,spos(gpos)+15,,fangcolor
          For t=spos(gpos)+30 To 280 Step 6
            Box ((gpos-1)*40),t-6,40,6,,bgcolor,bgcolor
            Text ((gpos-1)*40),t,"!",,10,,glovecolor3
            Play tone t+300,t+300,5
            Pause 5
          Next
          Box ((gpos-1)*40),270,40,10,,bgcolor,bgcolor
          For t=1 To 10:ii$=Inkey$:Next
      End Select
      If gpos<>oldgpos Then
        Text (oldgpos-1)*40,280,"A",,10,,glovecolor3
      End If
      If gpos<>oldgpos Or i$=" " Then
        Text (gpos-1)*40,280,"!",,10,,glovecolor3
        oldgpos=gpos
      End If
      If Rnd>.9 Then
        Play tone 2500,2500,2
      End If
      Pause 15
    End If
  Loop Until gameover=1 Or I$=Chr$(27)
  If gameover=1 Then
    Line ((x-1)*40)+20,spos(x)+20,((gpos-1)*40)+20,299,,webcolor
    Line ((gpos-1)*40)+20,279,((gpos-1)*40)+20,319,,webcolor
    Play tone 2500,2500,2:Pause 50
    Play tone 2500,2500,2:Pause 50
    Line (gpos-1)*40,299,gpos*40,299,,webcolor
    Play tone 2500,2500,2:Pause 50
    Play tone 2500,2500,2:Pause 50
    Line ((gpos-1)*40)+6,285,(gpos*40)-5,311,,webcolor
    Play tone 2500,2500,2:Pause 50
    Play tone 2500,2500,2:Pause 50
    Line ((gpos-1)*40)+5,311,(gpos*40)-5,285,,webcolor
    Play tone 2500,2500,2:Pause 50
    Play tone 2500,2500,2:Pause 50
    For t=1 To 21 Step 3
      Circle ((gpos-1)*40)+20,299,t,,,webcolor
      Play tone t*100,t*70,40
      Pause 30
    Next
    Text 15,50,"GAME OVER",,3,2,RGB(white)
    scoreline$="Your score: "+Str$(score)+" spiders bopped."
    boxstart=160-(Len(scoreline$)*4)
    Text boxstart,120,scoreline$,,1,,RGB(white)
    For t=1 To Len(ScoreLine$)
      Text boxstart+((t-1)*8),108,"'",,8,,RGB(rust)
      Pause 10
    Next
    Text boxstart+(8*Len(ScoreLine$)),108,Chr$(34),,8,,RGB(rust)
    Pause 10
    Text boxstart+(8*Len(scoreline$)),120,"%",,8,,RGB(rust)
    Pause 10
    Text boxstart+(8*Len(scoreline$)),132,"$",,8,,RGB(rust)
    Pause 10
    For t=Len(ScoreLine$) To 1 Step-1
      Text boxstart+((t-1)*8),132,"'",,8,,RGB(rust)
      Pause 10
    Next
    Text boxstart-8,132,"#",,8,,RGB(rust)
    Pause 10
    Text boxstart-8,120,"&",,8,,RGB(rust)
    Pause 10
    Text boxstart-8,108,"!",,8,,RGB(rust)
    Text boxstart,120,"Y",,1,,RGB(white)
    if score=1 then
      Line boxstart+160,122,boxstart+168,132,2,RGB(red)
      Line boxstart+168,122,boxstart+160,132,2,RGB(red)
    end if
  End If
  If i$<>Chr$(27) Then
    For t=1 To 100:i$=Inkey$:Next
    Do
      i$=Inkey$
    Loop Until i$<>""
  End If
Loop
